combos {
    compatible = "zmk,combos";

    // ===== TAB AND RETURN COMBOS (40ms timeout, 100ms require-prior-idle) =====
    combo_tab {
        timeout-ms = <40>;
        require-prior-idle-ms = <100>;
        key-positions = <12 13>;  // S+T → Return
        bindings = <&kp RET>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_return {
        timeout-ms = <40>;
        require-prior-idle-ms = <100>;
        key-positions = <16 17>;  // N+E → Tab
        bindings = <&kp TAB>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_left_click_mn {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <15 16>;  // M+N → Left Click
        bindings = <&mkp MB1>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_middle_click_dv {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <23 24>;  // D+V → Middle Click
        bindings = <&mkp MB3>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_copy {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <13 14>;  // T+G → Copy
        bindings = <&copy_cut>;
        layers = <0>;
    };
    combo_copy_exit {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <13 14>;  // T+G → Copy + Exit to default layer
        bindings = <&copy_cut>;
        layers = <1 2 3 4 5 6>;
    };

    // ===== VERTICAL COMBOS (50ms timeout, 100ms require-prior-idle) =====
    // Symbol combos
    combo_colon {
        timeout-ms = <40>;
        require-prior-idle-ms = <150>;
        key-positions = <2 3>;  // F+P → ;
        bindings = <&kp SEMI>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_escape {
        timeout-ms = <40>;
        require-prior-idle-ms = <150>;
        key-positions = <6 7>;  // L+U → Esc
        bindings = <&kp ESC>;
        layers = <0>;
    };
    combo_exit {
        timeout-ms = <40>;
        require-prior-idle-ms = <150>;
        key-positions = <6 7>;  // L+U → Exit to default layer
        bindings = <&to 0>;
        layers = <1 2 3 4 5 6>;
    };
    combo_tilde {
        timeout-ms = <40>;
        require-prior-idle-ms = <150>;
        key-positions = <26 27>;  // H+, → :
        bindings = <&kp COLON>;
        layers = <0 1 2 3 4 5 6>;
    };

    // Edit combos
    combo_delete_wr {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <1 11>;  // W+R → Delete
        bindings = <&kp DEL>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_paste_pb {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <3 4>;  // P+B → Paste
        bindings = <&kp K_PASTE>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_backspace_pt {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <3 13>;  // P+T → Backspace
        bindings = <&kp BSPC>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_mouse_up {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <2 12>;  // F+S → Mouse Up
        bindings = <&mmv MOVE_UP>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_mouse_left {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <11 21>;  // R+X → Mouse Left
        bindings = <&mmv MOVE_LEFT>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_mouse_down {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <12 22>;  // S+C → Mouse Down
        bindings = <&mmv MOVE_DOWN>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_mouse_right {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <13 23>;  // T+D → Mouse Right
        bindings = <&mmv MOVE_RIGHT>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_scroll_up {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <4 14>;  // B+G → Scroll Up
        bindings = <&msc SCRL_UP>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_scroll_down {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <14 24>;  // G+V → Scroll Down
