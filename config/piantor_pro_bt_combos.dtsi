combos {
    compatible = "zmk,combos";

    // ===== HORIZONTAL COMBOS (35ms timeout, 200ms require-prior-idle) =====
    // Top row symbols
    combo_minus {
        timeout-ms = <35>;
        require-prior-idle-ms = <200>;
        key-positions = <1 2>;  // W+F → -
        bindings = <&kp MINUS>;
        layers = <0 1>;
    };
    combo_slash {
        timeout-ms = <35>;
        require-prior-idle-ms = <200>;
        key-positions = <2 3>;  // F+P → /
        bindings = <&kp FSLH>;
        layers = <0 1>;
    };
    combo_lbkt {
        timeout-ms = <35>;
        require-prior-idle-ms = <200>;
        key-positions = <3 4>;  // P+B → [
        bindings = <&kp LBKT>;
        layers = <0 1>;
    };
    combo_rbkt {
        timeout-ms = <35>;
        require-prior-idle-ms = <200>;
        key-positions = <5 6>;  // J+L → ]
