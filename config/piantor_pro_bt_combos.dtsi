    // Mouse click combos
    combo_undo_jl {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <5 6>;  // J+L → Undo
        bindings = <&undo_redo>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_right_click_kh {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <25 26>;  // K+H → Right Click
        bindings = <&mkp MB2>;
        layers = <0 1 2 3 4 5 6>;
    };

    // Navigation combos
    combo_grave_jm {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <5 15>;  // J+M → `
        bindings = <&kp GRAVE>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_home {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <6 16>;  // L+N → Home
        bindings = <&home_morph>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_up {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <7 17>;  // U+E → Up
        bindings = <&up_morph>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_end {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <8 18>;  // Y+I → End
        bindings = <&end_morph>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_tilde_mk {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <15 25>;  // M+K → ~
        bindings = <&kp TILDE>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_left {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <16 26>;  // N+H → Left
        bindings = <&left_morph>;
        layers = <0 1 2 3 4 5 6>;
    };
    combo_down {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <17 27>;  // E+, → Down
